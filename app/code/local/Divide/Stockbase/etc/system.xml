<?xml version="1.0"?>
<config>
    
    <tabs>
        <stockbaseconfig translate="label" module="Divide_Stockbase">
            <label>Stockbase</label>
            <sort_order>160</sort_order>
        </stockbaseconfig>
    </tabs>

    <sections>
        <stockbase_options translate="label" module="Divide_Stockbase">
            <label>Settings</label>
            <tab>stockbaseconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <login translate="label">
                    <label>Stockbase credentials</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <username>
                            <label>Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your stockbase username</comment>
                        </username>
                        <password>
                            <label>Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your stockbase Password</comment>
                        </password>
                        <order_prefix>
                            <label>Order Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>A Custom prefix for your orders</comment>
                        </order_prefix>
                        <stockbase_active>
                            <label>Stockbase module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disable the stockbase module.</comment>
                        </stockbase_active>
                        <stockbase_noos_active>
                            <label>Synchronize NOOS products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your products will never go out of stock if Stockbase has the item with NOOS
                                status.
                            </comment>
                        </stockbase_noos_active>
                        <stockbase_image_import>
                            <label>Stockbase image import</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Import images from the suppliers through Stockbase.</comment>
                        </stockbase_image_import>
                        <stockbase_ean_field>
                            <label>Products EAN field</label>
                            <frontend_type>select</frontend_type>
                            <source_model>stock/options</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your custom field which holds the EAN for a product.</comment>
                        </stockbase_ean_field>
                        <stockbase_enviroment>
                            <label>Server</label>
                            <frontend_type>select</frontend_type>
                            <source_model>stock/enviroment</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Development or Live server</comment>
                        </stockbase_enviroment>
                    </fields>
                </login>
            </groups>
        </stockbase_options>
    </sections>
    
</config>